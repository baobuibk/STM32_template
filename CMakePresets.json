{
  "version": 3,
  "configurePresets": [
    {
      "name": "Debug",
      "generator": "Ninja",
      "binaryDir": "${sourceDir}/build/Debug",
      "toolchainFile": "${sourceDir}/cmake/gnu-tools-for-stm32.cmake",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug",
        "CMAKE_EXPORT_COMPILE_COMMANDS": "ON",
        "PROJECT_ORIGINAL_NAME": "test",
        "CMSIS_Dvendor": "STMicroelectronics:13",
        "CMSIS_Dname": "STM32F407VGT6",
        "CMSIS_Dcore": "Cortex-M4",
        "CMSIS_Dtz": "NO_TZ",
        "CMSIS_Dfpu": "SP_FPU",
        "CMSIS_Ddsp": "DSP",
        "CMSIS_Dmve": "NO_MVE",
        "CMSIS_Dmpu": "MPU",
        "CMSIS_Dendian": "Little-endian",
        "CMSIS_Dsecure": "",
        "CMSIS_Tcompiler": "GCC"
      }
    },
    {
      "name": "Release",
      "generator": "Ninja",
      "binaryDir": "${sourceDir}/build/Release",
      "toolchainFile": "${sourceDir}/cmake/gnu-tools-for-stm32.cmake",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release",
        "CMAKE_EXPORT_COMPILE_COMMANDS": "ON",
        "PROJECT_ORIGINAL_NAME": "test",
        "CMSIS_Dvendor": "STMicroelectronics:13",
        "CMSIS_Dname": "STM32F407VGT6",
        "CMSIS_Dcore": "Cortex-M4",
        "CMSIS_Dtz": "NO_TZ",
        "CMSIS_Dfpu": "SP_FPU",
        "CMSIS_Ddsp": "DSP",
        "CMSIS_Dmve": "NO_MVE",
        "CMSIS_Dmpu": "MPU",
        "CMSIS_Dendian": "Little-endian",
        "CMSIS_Dsecure": "",
        "CMSIS_Tcompiler": "GCC"
      }
    },
    {
      "name": "test_native",
      "generator": "Ninja",
      "binaryDir": "${sourceDir}/build/host/test_native",
      "cacheVariables": {
        "BUILD_FIRMWARE": "OFF",
        "BUILD_HOST_TESTS": "ON",

        "CMAKE_BUILD_TYPE": "Debug",
        "CMAKE_EXPORT_COMPILE_COMMANDS": "ON",

        "CMAKE_C_COMPILER": "C:/msys64/mingw64/bin/gcc.exe",
        "CMAKE_CXX_COMPILER": "C:/msys64/mingw64/bin/g++.exe",
        "CMAKE_ASM_COMPILER": "C:/msys64/mingw64/bin/gcc.exe",

        "CMAKE_C_FLAGS": "-g -Wall -Wextra -O0",
        "CMAKE_CXX_FLAGS": "-g -Wall -Wextra -O0"
      }
    }

  ],
  "buildPresets": [
    { "name": "Debug", "configurePreset": "Debug" },
    { "name": "Release", "configurePreset": "Release" },
    { "name": "test_native", "configurePreset": "test_native" }
  ]
}
