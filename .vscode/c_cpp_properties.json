{
  "version": 4,
  "configurations": [
    {
      // tên profile hiển thị trong VS Code
      "name": "CMake",
      // CMake Tools sẽ tự sinh includePath, defines, compile_commands.json, …
      "configurationProvider": "ms-vscode.cmake-tools",

      // tùy chọn cho IntelliSense khi chưa cấu hình CMake
      "intelliSenseMode": "gcc-arm",
      "cStandard": "c17",
      "cppStandard": "c++14",
      "includePath": [
                "${default}",
                "${workspaceFolder}/**",
                "C:/Program Files (x86)/Arm GNU Toolchain arm-none-eabi/14.3 rel1/arm-none-eabi/include"
                ]
    }
  ]
}
